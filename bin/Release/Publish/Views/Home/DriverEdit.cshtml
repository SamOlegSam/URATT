                    }
                    else
                    {
                        <input type="checkbox" name="inList" checked onchange="CountSelected()" id="CE" value="CE">
                    }
                </td>

                <td style="padding:0.5em 0.5em;">
                    DE:
                    @if (Model.VodUd.DE == null)
                    {
                        <input type="checkbox" name="inList" onchange="CountSelected()" id="DE" value="DE">
                    }
                    else
                    {
                        <input type="checkbox" name="inList" checked onchange="CountSelected()" id="DE" value="DE">
                    }
                </td>

                <td style="padding:0.5em 0.5em;">
                    F:
                    @if (Model.VodUd.F == null)
                    {
                        <input type="checkbox" name="inList" onchange="CountSelected()" id="F" value="F">
                    }
                    else
                    {
                        <input type="checkbox" name="inList" checked onchange="CountSelected()" id="F" value="F">
                    }
                </td>

                <td style="padding:0.5em 0.5em;">
                    I:
                    @if (Model.VodUd.I == null)
                    {
                        <input type="checkbox" name="inList" onchange="CountSelected()" id="I" value="I">
                    }
                    else
                    {
                        <input type="checkbox" name="inList" checked onchange="CountSelected()" id="I" value="I">
                    }

                </td>

            </tr>
        </table>

    </div>

    <div id="VoenBilet" class="tab-pane fade" style="margin-left:10px;">
        <h3>Военный билет</h3>

        <label>Номер</label>
        <input type="text" class="form-control btn-block" id="NumberVoen" value="@Model.VoenBilet.Number" />

        <label>Звание</label>
        <input type="text" class="form-control btn-block" id="Zvanie" value="@Model.VoenBilet.Zvanie" />

    </div>

</div>

<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-info" style="min-width:100px" onclick="DriverEditSave(@Model.IDVod)">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>

