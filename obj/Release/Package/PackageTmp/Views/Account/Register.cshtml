@model UchetAuto.Models.RegisterViewModel

    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-2">

        </div>

        <div class="col-md-12">

            <section id="loginForm">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {


                    <div align="center">
                        <h2>Учет работы автотракторной техники</h2>
                        <h3><b>ОАО "Гомельтранснефть Дружба"</b></h3>
                        <hr />
                        <div class="col-md-3">
                        </div>
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary("", new { @class = "text-danger" })


                        <div class="col-md-6" style="background-color:#B0C4DE; border-radius:15px 15px;">
                            @Html.AntiForgeryToken()
                            <h4>Создание новой учетной записи</h4>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <h5><b>e-mail</b></h5>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

                            <h5><b>Пароль</b></h5>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })

                            <h5><b>Подтверждение пароля</b></h5>
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                            <br>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <input type="submit" class="btn btn-default" value="Регистрация" />
                                </div>

                            </div>

                        </div>

                    </div>





