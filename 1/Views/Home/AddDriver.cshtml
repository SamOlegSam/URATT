@model UchetAuto.Models.Voditel

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Общие</a></li>
        <li><a data-toggle="tab" href="#passport">Паспорт</a></li>
        <li><a data-toggle="tab" href="#VodUd">Водительское удостоверение</a></li>
        <li><a data-toggle="tab" href="#VoenBilet">Военный билет</a></li>
    </ul>

    <div class="tab-content">
        <div id="home" class="tab-pane fade in active" style="margin-left:10px;">
            <h3>Общие</h3>
            <label>Табельный номер</label>
            <input type="text" class="form-control btn-block" id="TabNumber" />

            <label>Фамилия</label>
            <input type="text" class="form-control btn-block" id="LastName" />

            <label>Имя</label>
            <input type="text" class="form-control btn-block" id="FirstName" />

            <label>Отчество</label>
            <input type="text" class="form-control btn-block" id="MiddleName" />

            <label>Дата рождения</label>
            <input type="date" class="form-control btn-block" id="dateroj" />

            <label>Мобильный телефон</label>
            <input type="text" class="form-control btn-block" id="MobPhone" />

            <label>Городской телефон</label>
            <input type="text" class="form-control btn-block" id="GorPhone" />

            <label>Дата прохождения медицинской комиссии</label>
            <input type="date" class="form-control btn-block" id="dateMed" />

            <label>Филиал</label>
            @Html.DropDownList("Filial1", ViewBag.fil as SelectList, "Выберите филиал", new { @class = "form-control btn-block", id = "Fil" })

            <label>Подразделение</label>
            @Html.DropDownList("Podrazd1", ViewBag.podrazd as SelectList, "Выберите подразделение", new { @class = "form-control btn-block", id = "Podrazd" })

            <label>Должность</label>
            @Html.DropDownList("Doljnost1", ViewBag.dolj as SelectList, "Выберите должность", new { @class = "form-control btn-block", id = "Dolj" })

            <label>Класс</label>
            <input type="text" class="form-control btn-block" id="Class" />

        </div>
        <div id="passport" class="tab-pane fade" style="margin-left:10px;">
            <h3>Паспортные данные</h3>

            <label>Личный номер</label>
            <input type="text" class="form-control btn-block" id="IDNumber" />

            <label>Серия</label>
            <input type="text" class="form-control btn-block" id="Seria" />

            <label>Номер</label>
            <input type="text" class="form-control btn-block" id="Number" />

            <label>Адрес регистрации</label>
            <input type="text" class="form-control btn-block" id="Propiska" />

            <label>Адрес проживания</label>
            <input type="text" class="form-control btn-block" id="Address" />

            <label>Кем выдан</label>
            <input type="text" class="form-control btn-block" id="Vidan" />

            <label>Срок действия</label>
            <input type="date" class="form-control btn-block" id="SrokD" />

        </div>
        <div id="VodUd" class="tab-pane fade" style="margin-left:10px;">
            <h3>Водительское удостоверение</h3>

            <label>Номер</label>
            <input type="text" class="form-control btn-block" id="NumberVod" />

            <label>Срок действия</label>
            <input type="date" class="form-control" id="SrokDVodUd">

            <label>Категории:</label>
            

            <table >
                <tr>
                    <td style="padding:0.5em 0.5em;">
                        AM: <input type="checkbox" name="inList" onchange="CountSelected()" id="AM" value="AM">

                    </td>

                    <td style="padding:0.5em 0.5em;">
                        A: <input type="checkbox" name="inList" onchange="CountSelected()" id="A" value="A">

                    </td>

                    <td style="padding:0.5em 0.5em;">
                        A1: <input type="checkbox" name="inList" onchange="CountSelected()" id="A1" value="A1">

                    </td>

                    <td style="padding: 0.5em 0.5em;">
                        В: <input type="checkbox" name="inList" onchange="CountSelected()" id="B" value="B">
                    </td>


                    <td style="padding:0.5em 0.5em;">
                        C: <input type="checkbox" name="inList" onchange="CountSelected()" id="C" value="C">
                    </td>


                    <td style="padding:0.5em 0.5em;">
                        D: <input type="checkbox" name="inList" onchange="CountSelected()" id="D" value="D">
                    </td>

                    <td style="padding:0.5em 0.5em;">
                        BE: <input type="checkbox" name="inList" onchange="CountSelected()" id="BE" value="BE">

                    </td>

                    <td style="padding:0.5em 0.5em;">
                        CE: <input type="checkbox" name="inList" onchange="CountSelected()" id="CE" value="CE">

                    </td>

                    <td style="padding:0.5em 0.5em;">
                        DE: <input type="checkbox" name="inList" onchange="CountSelected()" id="DE" value="DE">

                    </td>

                    <td style="padding:0.5em 0.5em;">
                        F: <input type="checkbox" name="inList" onchange="CountSelected()" id="F" value="F">

                    </td>


                    <td style="padding: 0.5em 0.5em;">
                        I: <input type="checkbox" name="inList" onchange="CountSelected()" id="I" value="I">
                    </td>


                </tr>
            </table>

        </div>

        <div id="VoenBilet" class="tab-pane fade" style="margin-left:10px;">
            <h3>Военный билет</h3>

            <label>Номер</label>
            <input type="text" class="form-control btn-block" id="NumberVoen" />

            <label>Звание</label>
            <input type="text" class="form-control btn-block" id="Zvanie" />
                        
        </div>

    </div>

<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-info" style="min-width:100px" onclick="DriverAddSave()">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>

