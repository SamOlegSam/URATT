@model UchetAuto.Models.Cars

<style>
    
 tr:nth-child(odd) {
        background: #ffffff; /* Цвет фона */
    }

    tr:nth-child(even) {
        background: #ffffff; /* Цвет фона */
    }
    td {
    padding: 5px; /* Поля вокруг текста */ 
    
   }
.tablesss
{
    width:100%;
    border-spacing: 12px 18px;
   
}
</style>

    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#home">Основные</a></li>
        <li><a data-toggle="tab" href="#reference">Справочные параметры</a></li>
        <li><a data-toggle="tab" href="#norm">Нормы</a></li>        
        <li><a data-toggle="tab" href="#oil">Масла/Присадки</a></li>
    </ul>

    <div class="tab-content" style="margin-right:10px;">
        <div id="home" class="tab-pane fade in active" style="margin-left:10px;">
            <h3>Основные</h3>

            <label>Гаражный номер</label>
            <input type="text" class="form-control btn-block" id="GarNumber" />

            <label>Модель</label>
            <input type="text" class="form-control btn-block" id="Model" />

            <label>Гос.номер</label>
            <input type="text" class="form-control btn-block" id="NumberGos" />

            <label>Водитель</label>
            @Html.DropDownList("LastName", ViewBag.vod as SelectList, "Выберите водителя", new { @class = "form-control btn-block", id = "vod" })

            <label>Филиал</label>
            @Html.DropDownList("Filial1", ViewBag.fil as SelectList, "Выберите филиал", new { @class = "form-control btn-block", id = "Fil" })

            <label>Дата поступления</label>
            <input type="date" class="form-control btn-block" id="DatePost" />

            <label>Дата прохождения техосмотра</label>
            <input type="date" class="form-control btn-block" id="Tehosmotr" />

        </div>
        <div id="reference" class="tab-pane fade" style="margin-left:10px;">
            <h3>Справочные параметры</h3>

            <label>Тип атомобиля</label>
            @Html.DropDownList("TypeCar1", ViewBag.car as SelectList, "Выберите тип автомобиля", new { @class = "form-control btn-block", id = "car" })

            <label>Тип кузова</label>
            @Html.DropDownList("TypeCarBody1", ViewBag.body as SelectList, "Выберите тип кузова", new { @class = "form-control btn-block", id = "body" })

            <label>Тип двигателя</label>
            @Html.DropDownList("TypeMotor1", ViewBag.motor as SelectList, "Выберите тип двигателя", new { @class = "form-control btn-block", id = "motor" })

            <label>Объем двигателя</label>
            <input type="text" class="form-control btn-block" id="VMotor" />

            <label>Год выпуска</label>
            @Html.DropDownList("Year1", ViewBag.year as SelectList, "Выберите год выпуска", new { @class = "form-control btn-block", id = "year" })

            <label>Грузоподъемность</label>
            <input type="text" class="form-control btn-block" id="Gruzopod" />

            <div class="row">
                <div class="btn-group btn-group-justified">
                    <div class="btn-group">
                        <div class="col-sm-6">
                            <label>Колес:</label>
                            <input type="text" class="form-control btn-block" id="Whels" />
                        </div>
                    </div>
                    <div class="btn-group">
                        <div class="col-sm-6">
                            <label>Запасок:</label>
                            <input type="text" class="form-control btn-block" id="Spare" />
                        </div>
                    </div>

                    <div class="btn-group">
                        <div class="col-sm-3"></div>
                    </div>
                    <div class="btn-group">
                        <div class="col-sm-3"></div>
                    </div>

                </div>
            </div>

            <div class="row">
                <div class="btn-group btn-group-justified">
                    <div class="btn-group">
                        <div class="col-sm-12">
                            <label>Одометр:</label>
                            <input type="text" class="form-control btn-block" id="Odometer" />
                        </div>
                    </div>
                    <div class="btn-group">
                        <div class="col-sm-12">
                            <label>Моточасы:</label>
                            <input type="text" class="form-control btn-block" id="MotoHour" />
                        </div>
                    </div>

                    <div class="btn-group">
                        <div class="col-sm-12"></div>
                    </div>
                    <div class="btn-group">
                        <div class="col-sm-12"></div>
                    </div>

                </div>
            </div>

            <label>Тип топлива</label>
            @Html.DropDownList("Fuel1", ViewBag.fuel as SelectList, "Выберите топливо", new { @class = "form-control btn-block", id = "fuel" })

            <label>Емкость бака</label>
            <input type="text" class="form-control btn-block" id="VTank" />

            <label>Остаток топлива в баке</label>
            <input type="text" class="form-control btn-block" id="BalanceTank" />

            <label>Линейная норма</label>
            <input type="text" class="form-control btn-block" id="LinNorma" />

        </div>

        <div id="norm" class="tab-pane fade" style="margin-left:10px;">
            <h3>Нормы</h3>
            <hr>
            <h4 style="text-decoration: underline"><strong>Повышающие</strong></h4>

            <label>С прицепом</label>
            <input type="text" class="form-control btn-block" id="WithTrailer" />

            <label>На 100 тонно/км</label>
            <input type="text" class="form-control btn-block" id="Na100TonnKm" />

            <label>Механизмы</label>
            <input type="text" class="form-control btn-block" id="Mechanizm" />

            <label>На отопитель</label>
            <input type="text" class="form-control btn-block" id="Heater" />
            <hr>

            <h4 style="text-decoration: underline"><strong>В %</strong></h4>

            <div class="row">
                <div class="btn-group btn-group-justified">
                    <div class="btn-group">
                        <div class="col-sm-12">
                            <label>Город 100+</label>
                            <input type="text" class="form-control btn-block" id="Gorod100" />
                        </div>
                    </div>
                    <div class="btn-group">
                        <div class="col-sm-12">
                            <label>Город 300+</label>
                            <input type="text" class="form-control btn-block" id="Gorod300" />
                        </div>
                    </div>

                    <div class="btn-group">
                        <div class="col-sm-12">
                            <label>Город 1000+</label>
                            <input type="text" class="form-control btn-block" id="Gorod1000" />
                        </div>
                    </div>

                    <div class="btn-group">
                        <div class="col-sm-12"></div>
                    </div>
                    <div class="btn-group">
                        <div class="col-sm-12"></div>
                    </div>

                </div>
            </div>

            <label>С остановками</label>
            <input type="text" class="form-control btn-block" id="WithStop" />

            <label>Медленно</label>
            <input type="text" class="form-control btn-block" id="Slowly" />

            <label>Бездорожье</label>
            <input type="text" class="form-control btn-block" id="Offroad" />

            <label>По трассе</label>
            <input type="text" class="form-control btn-block" id="Highway" />

            <label>Амортизация</label>
            <input type="text" class="form-control btn-block" id="Amortiz" />

            <label>Кондиционер</label>
            <input type="text" class="form-control btn-block" id="Conditioning" />

            <label>На генератор</label>
            <input type="text" class="form-control btn-block" id="Generator" />

            <label>AddBlue</label>
            <input type="text" class="form-control btn-block" id="AddBlue" />

            <label>По карьеру</label>
            <input type="text" class="form-control btn-block" id="Career" />


        </div>              

        <div id="oil" class="tab-pane fade" style="margin-left:10px;">
            <h3>Нормы расхода масла и присадок</h3>

            <label>Моторное</label>
            <input type="text" class="form-control btn-block" id="OilMotor" />

            <label>Трансмиссионное</label>
            <input type="text" class="form-control btn-block" id="Transmission" />

            <label>Специальное</label>
            <input type="text" class="form-control btn-block" id="Spec" />

            <label>Гидравлическое</label>
            <input type="text" class="form-control btn-block" id="Hydravlic" />

            <label>Присадки</label>
            <input type="text" class="form-control btn-block" id="other" />

            
        </div>

    </div>

<div class="modal-footer" style="text-align:center">
    <button type="submit" class="btn btn-info" style="min-width:100px" onclick="CarAddSave()">Сохранить</button>
    <button type="button" class="btn btn-default" data-dismiss="modal" style="min-width:100px">Отмена</button>
</div>


