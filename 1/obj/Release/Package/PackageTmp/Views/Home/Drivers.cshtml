<div id="tab">
    <table class="table">

        <tr>
            <td colspan="8" align="center" style="background-color:#f0f8ff">
                Личные данные
            </td>
            <td colspan="4" align="center" style="background-color:#f8f8ff">
                Филиал
            </td>
            <td colspan="7" align="center" style="background-color:#f0f8ff">
                Пасспортные данные
            </td>
            <td colspan="3" align="center" style="background-color:#f8f8ff">
                Водительское удостоверение
            </td>
            <td colspan="2" align="center" style="background-color:#f0f8ff">
                Военный билет
            </td>
            <td>
            </td>
        </tr>
        <tr>
            <th style="background-color:#f8fcff">
                Таб.номер
            </th>
            <th style="background-color:#f8fcff">
                Фамилия
            </th>
            <th style="background-color:#f8fcff">
                Имя
            </th>
            <th style="background-color:#f8fcff">
                Отчество
            </th>
            <th style="background-color:#f8fcff">
                Дат.Рожд.
            </th>
            <th style="background-color:#f8fcff">
                МобТел
            </th>
            <th style="background-color:#f8fcff">
                ГорТел
            </th>
            <th style="background-color:#f8fcff">
                МедКом
            </th>
            <th style="background-color:#f8f8ff">
                Филиал
            </th>
            <th style="background-color:#f8f8ff">
                Подразделение
            </th>
            <th style="background-color:#f8f8ff">
                Должность
            </th>
            <th style="background-color:#f8f8ff">
                Класс
            </th>
            <th style="background-color:#f8fcff">
                №_Паспорта
            </th>
            <th style="background-color:#f8fcff">
                Серия
            </th>
            <th style="background-color:#f8fcff">
                Номер
            </th>
            <th style="background-color:#f8fcff">
                Прописка
            </th>
            <th style="background-color:#f8fcff">
                Проживание
            </th>
            <th style="background-color:#f8fcff">
                Выдан
            </th>
            <th style="background-color:#f8fcff">
                Срок_дейст
            </th>
            <th style="background-color:#f8f8ff">
                №_ВодУд
            </th>
            <th style="background-color:#f8f8ff">
                СрокДейст
            </th>
            <th style="background-color:#f8f8ff">
                Категории
            </th>
            <th style="background-color:#f8fcff">
                №_ВоенБил
            </th>
            <th style="background-color:#f8fcff">
                Звание
            </th>

            <th style="background-color:#f8fcff"></th>
        </tr>


        @foreach (var item in Model)
        {

            <tr tr class="odd">
                <td>
                    @Html.DisplayFor(modelItem => item.TabNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport.DatRoj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneMob)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneGor)
                </td>
                @if (item.MedKomis <= DateTime.Now)
                {
                    <td style="background-color:#FFC0CB; border-radius:15px;">
                        @Html.DisplayFor(modelItem => item.MedKomis)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.MedKomis)
                    </td>
                }
                <td style="background-color:#f8f8ff">
                    @Html.DisplayFor(modelItem => item.Filial.Filial1)
                </td>
                <td style="background-color:#f8f8ff">
                    @Html.DisplayFor(modelItem => item.Podrazd.Podrazd1)
                </td>
                <td style="background-color:#f8f8ff">
                    @Html.DisplayFor(modelItem => item.Doljnost.Doljnost1)
                </td>
                <td style="background-color:#f8f8ff">
                    @Html.DisplayFor(modelItem => item.Klass)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Passport.IDNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport.Seria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport.Propis)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport.Vidan)
                </td>

                @if (item.Passport.Srok <= DateTime.Now)
                {
                    <td style="background-color:#FFC0CB; border-radius:15px;">
                        @Html.DisplayFor(modelItem => item.Passport.Srok)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.Passport.Srok)
                    </td>
                }
                <td style="background-color:#f8f8ff">
                    @Html.DisplayFor(modelItem => item.VodUd.Number)
                </td>

                @if (item.VodUd.SrokD <= DateTime.Now)
                {
                    <td style="background-color:#FFC0CB; border-radius:15px;">
                        @Html.DisplayFor(modelItem => item.VodUd.SrokD)
                    </td>
                }
                else
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.VodUd.SrokD)
                    </td>
                }

                <td style="background-color:#f8f8ff">
                    @Html.DisplayFor(modelItem => item.VodUd.AM) @Html.DisplayFor(modelItem => item.VodUd.A) @Html.DisplayFor(modelItem => item.VodUd.A1) @Html.DisplayFor(modelItem => item.VodUd.B) @Html.DisplayFor(modelItem => item.VodUd.C) @Html.DisplayFor(modelItem => item.VodUd.D) @Html.DisplayFor(modelItem => item.VodUd.BE) @Html.DisplayFor(modelItem => item.VodUd.CE) @Html.DisplayFor(modelItem => item.VodUd.DE) @Html.DisplayFor(modelItem => item.VodUd.F) @Html.DisplayFor(modelItem => item.VodUd.I)
                </td>
                <td style="background-color:#f0f8ff">
                    @Html.DisplayFor(modelItem => item.VoenBilet.Number)
                </td>
                <td style="background-color:#f0f8ff">
                    @Html.DisplayFor(modelItem => item.VoenBilet.Zvanie)
                </td>

                <td>
                    <button type="button" class="btn btn-icon waves-effect waves-light btn-info" title="Редактировать" onclick="DriverEdit(@item.IDVod)">
                        <span class="glyphicon glyphicon-pencil"></span>
                    </button>
                    <button type="button" class="btn btn-icon waves-effect waves-light btn-danger" title="Удалить" onclick="DeleteDriver(@item.IDVod)">
                        <span class="glyphicon glyphicon-trash"></span>
                    </button>
                </td>
            </tr>
        }
    </table>
</div>